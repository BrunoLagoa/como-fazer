<%- include('../header') %>

<a class="btn btn-info mb-4" href='/publicacoes/nova'>Nova Publicação</a>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th scope="col">Publicação</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% publicacoes.forEach(publicacao => { %>
        <tr>
        <td scope="row"><%= publicacao.titulo %></td>
        <td>
            <a class="btn btn-warning btn-sm" href="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>"> Editar</a> |
            <a class="btn btn-danger btn-sm" href="/publicacoes/excluir/<%= categoria %>/<%= publicacao.id %>"> Excluir</a><br />
        </td>
        </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../footer') %>