<%- include('../header') %>

<form method='POST' action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>" >
    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input type="text" class="form-control" name="titulo" id="titulo" value="<%= publicacao.titulo %>" placeholder="Insira o nome do titulo">
    </div>
    <div class="form-group">
        <label for="conteudo">Conteúdo</label>
        <textarea class="form-control" name="conteudo" id="conteudo" placeholder="Insira o conteúdo"><%= publicacao.conteudo %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/publicacoes" class="btn btn-secondary">Voltar</a>
</form>

<%- include('../footer') %>