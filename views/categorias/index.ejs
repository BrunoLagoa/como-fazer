<%- include('../header') %>

<a class="btn btn-info mb-4" href='/categorias/nova'>Nova Catetoria</a>
<a class="btn btn-info mb-4" href='/publicacoes/nova'>Nova Publicação</a>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th scope="col">Categorias</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% categorias.forEach(categoria => { %>
        <tr>
        <td>
          <a href="/publicacoes/categoria/<%= categoria.id %>"><%= categoria.categoria %></a>
        </td>
        <td>
            <a class="btn btn-warning btn-sm" href="/categorias/editar/<%= categoria.id %>"> Editar</a> |
            <a class="btn btn-danger btn-sm" href="/categorias/excluir/<%= categoria.id %>"> Excluir</a><br />
        </td>
        </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../footer') %>