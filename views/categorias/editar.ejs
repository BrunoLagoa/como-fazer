<%- include('../header') %>

<form method='POST' action="/categorias/editar/<%= categoria.id %>" >
  <div class="form-group">
    <label for="categoria">Categoria</label>
    <input type="text" class="form-control" name="categoria" id="categoria" value="<%= categoria.categoria %>" placeholder="Insira o nome da categoria">
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
  <a href="/categorias" class="btn btn-secondary">Voltar</a>
</form>

